import random
import webbrowser
import time
import os
import pyautogui as pa

pa.PAUSE = 1
pa.FAILSAFE = True
width, height = pa.size()

holder = 0
def create_search():
    query = ""
    for x in range(4):
        query += str(random.randint(1, 9))
    print(query)
    return query
while True:
    url = "https://www.ecosia.org/search?q={}".format(create_search())
    webbrowser.open(url, new=0)
    time.sleep(5)
    pa.moveTo(-1785, 227)
    pa.click()
    holder += 1
    if holder == 5:
        os.system("taskkill /im chrome.exe /f")
